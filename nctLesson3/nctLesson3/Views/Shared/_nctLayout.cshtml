<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/nctLesson3.styles.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com">
    </script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&amp;display=swap" rel="stylesheet" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body>
    <header class="flex items-center justify-between px-4 py-3 border-b border-[#2a2e43]">
        <div class="flex items-center space-x-6">
            <a class="text-[#5f7fff] font-extrabold text-xl select-none" asp-area="" asp-controller="nctHome" asp-action="nctIndex">
                BOKAchan
            </a>
            <nav class="flex space-x-6 text-sm font-semibold select-none">
                <a class="text-white border-b-2 border-[#5f7fff] pb-1" asp-area="" asp-controller="nctHome" asp-action="nctForum">
                    Trang Chủ
                </a>
                <a class="hover:text-white" asp-area="" asp-controller="nctHome" asp-action="nctAbout">
                    About
                </a>
            </nav>
        </div>
        </header>
    <div class="bg-[#22263b] rounded-lg p-4">
        <main role="main" class="flex items-center space-x-1 font-semibold text-white select-text">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - nctLesson3 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
